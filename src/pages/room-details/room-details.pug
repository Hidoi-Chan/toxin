extends ../../layout
include ../../blocks/header/header.pug
include ../../blocks/field/field.pug
include ../../blocks/button/button.pug
include ../../blocks/room-info-item/room-info-item.pug
include ../../blocks/review/review.pug
include ../../blocks/bullet-list/bullet-list.pug

block content
    +header('header_fixed')
    main.main
        div.main__first-screen
            div
            div
            div
        div.main__container
            div.main__content
                div.main__room-information
                    div.main__room-information-block
                        h2 Сведения о номере
                        +room-info-item('form-elements__room-info-item', 'mood', 'Комфорт', 'Шумопоглощающие стены')
                        +room-info-item('form-elements__room-info-item', 'location_city', 'Удобство', 'Окно в каждой из спален')
                        +room-info-item('form-elements__room-info-item', 'whatshot', 'Уют', 'Номер оснащён камином')
                    div.main__room-information-block
                        h2.main__pie Впечатления от номера
                        include ../../blocks/pie/pie.pug
                div.main__review-block
                    div.main__review-block-title
                        h2 Отзывы посетителей номера
                        p.main__review-block-description 2 отзыва
                    +review('', 'image.png', 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', ['review__like-button like-button_checked', 12])
                    +review('', 'image_4.png', 'Патрисия Стёклышкова', 'Неделю назад', 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент', ['review__like-button', 2])
                div.main__room-information
                    div.main__room-information-block
                        h2.main__rules Правила
                        +bulletList('', ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
                    div.main__room-information-block
                        h2.main__cancel Отмена
                        p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.            
            form(action="").card
                div.card__element.card__room-characteristics
                    h1.h1 № 888
                        span.h3.card__room-characteristics_color_purple  люкс
                    h2.card__price 9 990р
                        span.card__price_thin  в сутки
                div.card__element.card__row
                    +field('', 'Прибытие', 'field__input_width_150 field__input_border-radius_4 field__input_dropdown-color_dark75', 'text', '19.08.2019', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
                    +field('', 'Выезд', 'field__input_width_150 field__input_border-radius_4 field__input_dropdown-color_dark75', 'text', '23.08.2019', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
                div.card__element
                    +field('', 'Гости', 'field__input_width_320 field__input_border-radius_2 field__input_dropdown-color_dark75', '', '3 гостя', '', 'expand_more', 'field__icon_color_dark75', 'readonly')
                table.card__element.card__table
                    tr
                        td 9 990р х 4 суток
                        td
                        td 39 960р
                    tr
                        td Сбор за услуги: скидка 2 179р
                        td 
                            +buttonRound('card__button_round', 'i')
                        td 0р
                    tr
                        td Сбор за дополнительные услуги
                        td
                            +buttonRound('card__button_round', 'i')
                        td 300р
                div.card__element.card__room-characteristics
                    h2.h2 Итого
                    h2.h2 38 081р
                +button('card__button-reservation card__element button_width_320', 'Забронировать')
    include ../../blocks/footer/footer.pug