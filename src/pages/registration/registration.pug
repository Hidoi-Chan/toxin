extends ../../layout
include ../../blocks/header/header.pug
include ../../blocks/field/field.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/button/button.pug
include ../../blocks/radio/radio.pug
include ../../blocks/toggle/toggle.pug

block content
    +header('header_fixed')
    main.first-screen
        form(action="").card.registration__card.js-registration--form
            h1.card__element.h1 Регистрация аккаунта
            div.card__element.card__element_margin-bottom_10
                +field('js-registration--name-field', 'text', 'Имя', true)
                +field('js-registration--surname-field', 'text', 'Фамилия', true)
                div.card__row-for-radio
                    +radio('', 'Мужчина', 'male', 'gender')
                    +radio('', 'Женщина', 'female', 'gender')
            div.card__element
                h3.field__title дата рождения
                +field('field_js-date js-registration--birthday-field', 'text', 'ДД.ММ.ГГГГ', true)
            div.card__element
                h3.field__title данные для входа в сервис
                div.card__element_margin-bottom_10
                    +field('js-registration--email-field', 'email', 'Email', true)
                    +field('js-registration--password-field', 'password', 'Пароль', true)
                    +toggle('', 'Получать спецпредложения', 'get-offers', 'offers')
            +button('card__element button_with-icon js-registration--btn-submit', 'зарегистрироваться')
            div.card__element.card__submit-block
                p.card__submit-block-text Уже есть аккаунт на Toxin
                +linkButton('', '/sign-in.html', 'войти', true)
    include ../../blocks/footer/footer.pug