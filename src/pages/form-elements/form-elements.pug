block content
    main.form-elements
        div.form-elements__grid-item
            +field('Text Field', 'field__input_width_320 field__input_border-radius_4', 'text', 'Email', 'Default')
            +field('Text Field', 'field__input_width_320 field__input_border-radius_4 field__input_hover', 'text', 'This is pretty awesome', 'Hover / Focus')
            +field('Dropdown', 'field__input_width_320 field__input_border-radius_4 field__input_dropdown-color_dark75', '', 'Сколько гостей', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
            div.form-elements_margin_22
                +field('masked text field', 'field__input_width_320 field__input_border-radius_4 field_js-date', 'text', 'ДД.ММ.ГГГГ')
            div.form-elements__container.form-elements_margin_42
                +field('date Dropdown', 'field__input_width_150 field__input_border-radius_4 field__input_dropdown-color_dark75', 'text', 'ДД.ММ.ГГГГ', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
                +field('date Dropdown', 'field__input_width_150 field__input_border-radius_4 field__input_dropdown-color_dark75', 'text', '19.08.2019', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
            div.form-elements_margin_40
                +field('filter date dropdown', 'field__input_width_266 field__input_border-radius_4 field__input_dropdown-color_dark75', 'text', '19 авг - 23 авг', '', 'expand_more', 'field__icon_color_dark50', 'readonly')
            div.form-elements_margin_40
                +field('subscription text field', 'field__input_width_266 field__input_border-radius_4', 'text', 'Email', '', 'arrow_forward', 'field__icon_color_gradient')
        div.form-elements__grid-item
            div.form-elements__checkbox-container
                h3.form-elements__title_margin-bottom_18 Checkbox Buttons
                +checkbox('', 'Можно курить')
                +checkbox('checkbox_checked', 'Можно с питомцами')
                +checkbox('checkbox_checked', `Можно пригласить гостей (до 10 человек)`)
            div.form-elements_margin_30
                h3.form-elements__title_margin-bottom_13 Radio Buttons
                div.form-elements__container
                    +radio('radio_checked', 'Мужчина', 'male')
                    +radio('', 'Женщина', 'female')
            div.form-elements_margin_40
                h3.form-elements__title_margin-bottom_13 Toggle
                +toggle('toggle_checked', 'Получать спецпредложения', 'get special offers')
                +toggle('form-elements_margin_10', 'Получать спецпредложения', 'get special offers')
            div.form-elements_margin_44
                h3.form-elements__title_margin-bottom_13 like button
                div.form-elements__container.form-elements__container_padding-top_3.form-elements__container_margin-right
                    +like-button('', 2)
                    +like-button('like-button_checked', 12)
            div.form-elements_margin_40
                h3.form-elements__title_margin-bottom_13 rate button
                div.form-elements__container.form-elements__container_padding-top_5
                    +rate-result('', 4)
                    +rate-result('', 5)
        div.form-elements__grid-item
            div
                h3.form-elements__title_margin-bottom_4 Range Slider
                +range-slider('', '5 000p - 10 000p')
            div.form-elements__buttons-wrapper.form-elements_margin_25
                h3.form-elements__title_margin-bottom_13 buttons
                div.form-elements__container
                    +button('', 'click me')
                    +buttonDisabled('', 'click me')
                div.form-elements__container
                    +button('', 'click me', true)
                    +buttonDisabled('', 'click me', true)
                div.form-elements__container
                    +buttonWithoutFill('', 'click me', 'purple')
                    +buttonWithoutFill('', 'click me', 'dark50')
                div.form-elements__container
                    +button('button_width_320', 'перейти к оплате')
            div.form-elements_margin_10
                h3.form-elements__title_margin-bottom_18 pagination
                +pagination('', '1 – 12 из 100+ вариантов аренды')
        div.form-elements__grid-item
            +field('Dropdown', 'field__input_width_266 field__input_border-radius_2 field__input_dropdown-color_dark75', '', '2 спальни, 2 кровати…', 'Default', 'expand_more', 'field__icon_color_dark75', 'readonly')
            +field('Dropdown', 'field__input_width_266 field__input_border-radius_2 field__input_hover field__input_dropdown-color_dark75', '', '2 спальни, 2 кровати…', 'expanded', 'expand_more', 'field__icon_color_dark75', 'readonly', ['dropdown_width_266', ['спальни', 'кровати', 'ванные комнаты']])
        div.form-elements__grid-item
            +field('Dropdown', 'field__input_width_320 field__input_border-radius_2 field__input_hover field__input_dropdown-color_dark75', '', 'Сколько гостей', '', 'expand_more', 'field__icon_color_dark75', 'readonly', ['', ['взрослые', 'дети', 'младенцы'], true, ['dropdown__footer-button dropdown__footer-button_disabled', 'Очистить', 'purple'], ['dropdown__footer-button', 'Применить', 'purple']])
        div.form-elements__grid-item
            +field('Dropdown', 'field__input_width_320 field__input_border-radius_2 field__input_hover field__input_dropdown-color_dark75', '', '3 гостя', '', 'expand_more', 'field__icon_color_dark75', 'readonly', ['', ['взрослые', 'дети', 'младенцы'], true, ['dropdown__footer-button', 'Очистить', 'purple'], ['dropdown__footer-button', 'Применить', 'purple']])
        div.form-elements__grid-item
            div.form-elements__expandable-list-container
                +expandable-list('expandable-list_width_266 expandable-list_with-icon', 'expandable checkbox list')
                +expandable-list('form-elements_margin_22 expandable-list_width_266 expandable-list_with-icon', 'expandable checkbox list', [['', 'Завтрак'], ['checkbox_checked', 'Письменный стол'], ['checkbox_checked', 'Стул для кормления'], ['checkbox_checked', 'Кроватка'], ['', 'Телевизор'], ['', 'Шампунь']])
        div.form-elements__grid-item
            div
                h3.form-elements__title_margin-bottom_18 rich Checkbox Buttons
                +checkbox('', 'Широкий коридор', '', 'Ширина коридоров в номере не менее 91 см.')
                +checkbox('', 'Помощник для инвалидов', '', 'На 1 этаже вас встретит специалист и проводит до номера.')
        div.form-elements__column
            div
                h3.form-elements__title_margin-bottom_13 bullet list
                +bulletList('', ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
        div.form-elements__grid-item
            div
                +room-info-item('form-elements__room-info-item room-info-item_after', 'mood', 'Комфорт', 'Шумопоглощающие стены')
                +room-info-item('room-info-item_after', 'location_city', 'Удобство', 'Окно в каждой из спален')
        div.form-elements__grid-item.form-elements__review-container
            +review('', 'image.png', 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', ['review__like-button like-button_checked', 12])