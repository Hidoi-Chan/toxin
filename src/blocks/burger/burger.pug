mixin burger(className, id)
    input(class!=`burger ${className}` id=`${id}` type='checkbox')
    label(for=`${id}`)
        span
        span
        span

mixin filterBurger(className, id, text)
    input(class!=`burger burger_filter ${className}` id=`${id}` type='checkbox')
    label(for=`${id}`)= text
